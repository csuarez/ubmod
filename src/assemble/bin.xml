<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>README</include>
        <include>AUTHORS</include>
        <include>INSTALL</include>
        <include>TODO</include>
        <include>NOTICE</include>
        <include>ChangeLog</include>
        <include>LICENSE</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/docs</directory>
      <outputDirectory>/docs</outputDirectory>
      <excludes>
        <exclude>site/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/ddl</directory>
      <outputDirectory>/ddl</outputDirectory>
      <includes>
        <include>ubmod_schema.pdf</include>
        <include>ubmod.sql</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/portal/target</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>*.war</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/shredder/target</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>*-exe.jar</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
