<assembly>
  <id>src</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>README</include>
        <include>AUTHORS</include>
        <include>INSTALL</include>
        <include>TODO</include>
        <include>NOTICE</include>
        <include>ChangeLog</include>
        <include>LICENSE</include>
        <include>pom.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/docs</directory>
      <outputDirectory>/docs</outputDirectory>
      <excludes>
        <exclude>site/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/ddl</directory>
      <outputDirectory>/ddl</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src</directory>
      <outputDirectory>/src</outputDirectory>
    </fileSet>
  </fileSets>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>edu.buffalo.ccr.ubmod:portal</include>
      </includes>
      <sources>
        <fileSets>
          <fileSet>
            <excludes>
              <exclude>target/**</exclude>
            </excludes>
          </fileSet>
        </fileSets>
      </sources>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>edu.buffalo.ccr.ubmod:shredder</include>
      </includes>
      <sources>
        <fileSets>
          <fileSet>
            <excludes>
              <exclude>target/**</exclude>
            </excludes>
          </fileSet>
        </fileSets>
      </sources>
    </moduleSet>
  </moduleSets>
</assembly>
