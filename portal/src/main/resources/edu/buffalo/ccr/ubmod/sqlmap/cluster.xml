  <select id="activity" resultClass="java.util.HashMap" parameterClass="edu.buffalo.ccr.ubmod.util.DefaultParams">
     select
        c.cluster_id,
        c.host,
        ifnull(c.display_name, c.host) as display_name,
        ca.user_count,
        ca.group_count,
        <include refid="common.activityDetail" />
     from 
        cluster_activity ca 
     join activity a 
        on ca.activity_id = a.activity_id
     join cluster c
        on ca.cluster_id = c.cluster_id
     where 
        ca.cluster_id = #clusterId# and ca.interval_id = #intervalId#
  </select>
  <select id="fetch" resultClass="java.util.HashMap" parameterClass="java.util.Map">
    select * from cluster 
    where
        <isNotNull property="id"> 
        cluster_id = #id#
        </isNotNull>
  </select>
  <select id="list" resultClass="java.util.HashMap" parameterClass="java.util.Map">
    select
        c.cluster_id,
        ifnull(c.display_name, c.host) as display_name,
        c.host 
    from 
        cluster c
    <isNotNull property="username">
        join user_cluster uc
        on c.cluster_id = uc.cluster_id
        join user u
        on uc.user_id = u.user_id
        and u.user = #username#
    </isNotNull>
    order by display_name
  </select> 
</sqlMap>