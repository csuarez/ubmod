  <select id="list" resultClass="java.util.HashMap">
    select * from research_group order by group_name
  </select>
  <select id="activity" resultClass="java.util.HashMap" parameterClass="edu.buffalo.ccr.ubmod.util.DefaultParams">
    select 
        g.group_id,
        ifnull(g.pi_name, g.group_name) as group_name,
        g.pi_name,
        <include refid="common.statsGrid"/>
    from group_activity ga
    join activity a
      on ga.activity_id = a.activity_id
    join research_group g
      on ga.group_id = g.group_id
    where interval_id = #intervalId:INTEGER# and cluster_id = #clusterId:INTEGER#
    <isNotNull property="filter" >
        and (g.group_name like '%$filter$%' or g.pi_name like '%$filter$%')
    </isNotNull>
    <isNotNull property="sortBy" >
        order by $sortBy$ $sortDir$
    </isNotNull>
    <isNotNull property="offset">
    limit #offset:INTEGER#,#limit:INTEGER#
    </isNotNull>
  </select>
  <select id="activityCount" resultClass="java.lang.Integer" parameterClass="edu.buffalo.ccr.ubmod.util.DefaultParams">
    select count(*) as total
    from group_activity
    where interval_id = #intervalId:INTEGER# and cluster_id = #clusterId:INTEGER#
  </select>
  <select id="activityById" resultClass="java.util.HashMap" parameterClass="java.util.Map">
    select 
        g.group_id,
        ifnull(g.pi_name, g.group_name) as group_name,
        g.pi_name,
        ga.user_count,
        <include refid="common.activityDetail" />
    from
        research_group g
    left join
        group_activity ga
        on g.group_id = ga.group_id
    left join
        activity a
        on ga.activity_id = a.activity_id
    where
        g.group_id = #groupId:INTEGER#
        and ga.cluster_id = #clusterId:INTEGER#
        and ga.interval_id = #intervalId:INTEGER#    
  </select>
  <select id="fetch" resultClass="java.util.HashMap" parameterClass="java.util.Map">
    select 
        g.group_id,
        ifnull(g.pi_name, g.group_name) as group_name,
        g.pi_name
    from
        research_group g 
    where
        <isNotNull property="id">
        g.group_id = #id#
        </isNotNull>
        <isNotNull property="name">
        g.group_name = #name#
        </isNotNull>
  </select>
</sqlMap>
