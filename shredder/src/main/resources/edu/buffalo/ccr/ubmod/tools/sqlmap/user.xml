    <select id="selectAll" resultClass="java.util.HashMap">
        select * from user
    </select>
    <select id="selectFromEvent" resultClass="java.util.HashMap" parameterClass="java.lang.String">
        select host, user, queue, ugroup 
        from event 
        where host is not null 
              and user is not null 
        group by host, user, queue, ugroup
    </select>
    <insert id="insert" parameterClass="java.lang.String">
        insert user set user=#value#
        <selectKey resultClass="java.lang.Long">
            select last_insert_id() as id
        </selectKey>
    </insert>
    <delete id="deleteClusterLink" parameterClass="java.util.Map">
        delete from user_cluster where user_id=#userId:LONG# and cluster_id=#clusterId:LONG#
    </delete>
    <insert id="insertClusterLink" parameterClass="java.util.Map">
        insert user_cluster set user_id=#userId:LONG#, cluster_id=#clusterId:LONG#
    </insert>
    <delete id="deleteGroupLink" parameterClass="java.util.Map">
        delete from user_group where user_id=#userId:LONG# and group_id=#groupId:LONG#
    </delete>
    <insert id="insertGroupLink" parameterClass="java.util.Map">
        insert user_group set user_id=#userId:LONG#, group_id=#groupId:LONG#
    </insert>
    <delete id="deleteQueueLink" parameterClass="java.util.Map">
        delete from user_queue where user_id=#userId:LONG# and queue_id=#queueId:LONG#
    </delete>
    <insert id="insertQueueLink" parameterClass="java.util.Map">
        insert user_queue set user_id=#userId:LONG#, queue_id=#queueId:LONG#
    </insert>
    
    <insert id="insertActivity" parameterClass="java.util.Map">
        insert into user_activity set
            cluster_id=#cluster_id#,
            activity_id=#activity_id#,
            user_id=#user_id#,
            interval_id=#interval_id#
    </insert>
  <select id="selectActivity" resultMap="activity.ActivityResult" parameterClass="java.util.Map">
    select
        <include refid="activity.aggregateColumns"/>
    from 
        event e 
    where 
        type = 'E'
        and date_key between #start# and #end#
    group by
        host, user
  </select>
    <delete id="truncateActivity">
        truncate user_activity
    </delete>
</sqlMap>