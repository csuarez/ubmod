    <select id="selectAll" resultClass="java.util.HashMap">
        select * from cluster
    </select>
    <select id="selectFromEvent" resultClass="java.util.HashMap">
        select 
            distinct host 
        from event
        where  
            host is not null
    </select>
    <select id="selectByHost" resultClass="java.util.HashMap" parameterClass="java.lang.String">
        select * from cluster where host = #value#
    </select>
    <insert id="insert" parameterClass="java.lang.String">
        insert cluster set host=#value#
        <selectKey resultClass="java.lang.Long">
            select last_insert_id() as id
        </selectKey>
    </insert>
    <insert id="insertActivity" parameterClass="java.util.Map">
        insert into cluster_activity set
            user_count=#user_count#,
            group_count=#group_count#,
            cluster_id=#cluster_id#,
            activity_id=#activity_id#,
            interval_id=#interval_id#
    </insert>
  <select id="selectActivity" resultMap="activity.ActivityResult" parameterClass="java.util.Map">
    select
        <include refid="activity.aggregateColumns"/>
    from 
        event e 
    where 
        type = 'E'
        and date_key between #start# and #end#
    group by
        host
  </select>
    <delete id="truncateActivity">
        truncate cluster_activity
    </delete>
</sqlMap>